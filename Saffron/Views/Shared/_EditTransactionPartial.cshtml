@using Saffron.Models
@model TransactionViewModel

<table class="table" >
    <thead>
        <tr>
            <th>Account</th>
            <th>Category</th>
            <th>Type</th>
            <th>Date</th>
            <th>Amount</th>
            @*<th>Reconciled? </th>*@

            <th></th>
        </tr>
    </thead>
    @Html.AntiForgeryToken()
    <tbody>
        <tr>
            <td>@Html.DropDownList("AccountId", null, @Model.editTransaction.Account.Institution.Name + " " + @Model.editTransaction.Account.AccountType.Name, htmlAttributes: new { @class = "form-control" }) </td>
            <td>@Html.DropDownList("CategoryId", null, @Model.editTransaction.Category.Name, htmlAttributes: new { @class = "form-control" })</td>
            <td>@Html.DropDownList("TypeTransactionId", null, @Model.editTransaction.Type.Name,  htmlAttributes: new { @class = "form-control" })</td>
            <td>@Html.Editor("Date", new { htmlAttributes = new { @class = "form-control pickdate" } })</td>
            <td>@Html.Editor("Amount", new { htmlAttributes = new { @class = "form-control " } })</td>
            @*<td>@Html.CheckBox("Reconciled", false)</td>*@
        </tr>
    </tbody>
</table>

