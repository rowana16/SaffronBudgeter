
@{
    ViewBag.Title = "Invite";
}

<h2>Invite someone to your household</h2>

<div class="container">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Budget Items</h5>
                        <div class="ibox-tools">
                            
                            <ul class="dropdown-menu dropdown-user">
                                <li>
                                    <a href="#">Config option 1</a>
                                </li>
                                <li>
                                    <a href="#">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        @using (Html.BeginForm("Invite", "Households", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="row">
                                <div class="col-md-2">  Email  </div>
                                <input class="form-control col-md-12d" type="email" name="email" />
                                <input type="submit" class="col-md-10 btn btn-primary" value="Send Invite" />
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
